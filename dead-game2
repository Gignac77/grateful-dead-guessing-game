      text-align: center;
      font-weight: bold;
      width: 6em;
    }
    #result {
      margin-top: 1em;
      font-weight: bold;
      font-size: 1.5em;
      color: yellow;
      white-space: pre-line;
      min-height: 3em;
    }
    #score {
      margin-top: 1em;
      font-size: 1.2em;
      color: #ccc;
    }
    .correct {
      color: #00ff88;
    }
    .incorrect {
      color: #ff4444;
