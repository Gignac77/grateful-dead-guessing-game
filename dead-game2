<body>
  <div class="card">
    <h1 style="font-size: 3em; color: forestgreen">Guess the Year - Grateful Dead</h1>
    <audio id="audio" controls></audio>
    <br />
    <button class="generate" onclick="loadRandomTrack()">ðŸŽ¶ Random Tune Generator</button>
    <br />
    <input type="text" id="yearGuess" placeholder="Year" maxlength="4" autocomplete="off" />
    <br />
    <button class="reveal" onclick="revealAnswer()">Reveal Answer</button>
    <p id="result"></p>
    <p id="score">Score: 0/0 | High Score: 0</p>
  </div>

<script>
  let tracks = [];
  let currentTrack = null;
  let totalAttempts = 0;
  let correctAttempts = 0;
  let highScore = 0;

  async function loadTracks() {
    const res = await fetch('tracks.json');
    tracks = await res.json();
  }

  async function loadRandomTrack() {
    if (!tracks.length) await loadTracks();

    const track = tracks[Math.floor(Math.random() * tracks.length)];
    currentTrack = track;

    const audio = document.getElementById('audio');
    audio.src = `audio/${track.filename}`;
    audio.load();
    audio.play().catch(() => {
      document.getElementById('result').textContent = 'ðŸŽµ Couldnâ€™t play this tune â€” try another!';
    });

    document.getElementById('result').textContent = '';
  }

  function revealAnswer() {
    if (!currentTrack) return;

    let guess = document.getElementById('yearGuess').value.trim();
    if (/^\d{2}$/.test(guess)) {
      guess = (parseInt(guess) >= 30 ? '19' : '20') + guess;
    }

    totalAttempts++;
    let correct = guess === currentTrack.year;

    if (correct) correctAttempts++;
    if (correctAttempts > highScore) highScore = correctAttempts;

    document.getElementById('result').className = correct ? 'correct' : 'incorrect';
    document.getElementById('result').textContent = `You guessed: ${guess} â€” Correct Year: ${currentTrack.year}\n\nTrack: ${currentTrack.track}\nDate: ${currentTrack.date}`;
    document.getElementById('score').textContent = `Score: ${correctAttempts}/${totalAttempts} | High Score: ${highScore}`;
  }
</script>
</body>
</html>
